<?php

/**
 * @file
 * Contains billing.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function billing_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the billing module.
    case 'help.page.billing':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('This module is used to create bill') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function billing_theme() {
  $theme = [];
  $theme['billing_entity'] = [
    'render element' => 'elements',
    'file' => 'billing_entity.page.inc',
    'template' => 'billing_entity',
  ];
  $theme['billing_entity_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'billing_entity.page.inc',
  ];
  return $theme;
}

/**
 * Implements hook_theme_suggestions_HOOK().
 */
function billing_theme_suggestions_billing_entity(array $variables) {
  $suggestions = [];
  $entity = $variables['elements']['#billing_entity'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'billing_entity__' . $sanitized_view_mode;
  $suggestions[] = 'billing_entity__' . $entity->bundle();
  $suggestions[] = 'billing_entity__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'billing_entity__' . $entity->id();
  $suggestions[] = 'billing_entity__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
